{
  "extends": "@tooling/typescript/vite.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "compilerOptions": {
    "types": [
      "vite/client"
    ],
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@packages/ui/*": [
        "../../packages/ui/src/*"
      ]
    },
  },
  "references": [
    {
      "path": "../../packages/files"
    },
    {
      "path": "../../packages/database"
    },
    {
      "path": "../../packages/utils"
    },
    {
      "path": "../../packages/transactional"
    },
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/posthog"
    },
    {
      "path": "../../packages/environment"
    },
    {
      "path": "../../packages/api"
    },
    {
      "path": "../../packages/authentication"
    },
    {
      "path": "../../packages/localization"
    }
  ]
}
